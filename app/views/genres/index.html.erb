<section>
  <table style="margin:auto">
    <th style="font-size:28px">Genres:</th>
    <% @genres.each do |genre| %>
      <tr>
        <% if current_user_admin? %>
          <td style="width:30%"><%= link_to genre.name, genre %></td>
          <td style="text-align:right;width:10%"><%= link_to 'Edit', edit_genre_path(genre), class: 'btn btn-outline-success' %></td>
          <td style="width:10%"><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: 'btn btn-outline-danger' %></td>
        <% else %>
          <td style="width:1%"><%= link_to genre.name, genre %></td>
          <td style="text-align:right;width:10%"></td>
          <td style="width:10%"></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</section>
<% if current_user_admin? %>
  <section class="admin">
    <%= link_to 'Add New Genre', new_genre_path, class: 'button' %>
  </section>
<% end %>